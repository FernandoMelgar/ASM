<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainAnchorPane" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.asm.view.controller.EmployeesController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Empleados" AnchorPane.leftAnchor="15.0">
            <font>
                <Font name="Lato Regular" size="36.0" />
            </font>
        </Label>
        <VBox layoutX="14.0" layoutY="71.0" minWidth="740.0" stylesheets="@../css/home.css" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
            <children>
                <HBox alignment="CENTER_RIGHT" prefHeight="50.0">
                    <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#newClientBtnOnClick" style="-fx-background-color: #302c44; -fx-alignment: right;" stylesheets="@../css/home.css" text="Nuevo Empleado" textFill="WHITE">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin></Button>
                    </children>
                </HBox>
                <SplitPane fx:id="clientDetailSplitPane" nodeOrientation="LEFT_TO_RIGHT" prefWidth="710.0" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                    <items>
                        <TableView fx:id="clientsTable" cache="true" pickOnBounds="false" tableMenuButtonVisible="true">
                            <columns>
                                <TableColumn fx:id="columnID" editable="false" maxWidth="500.0" minWidth="60.0" prefWidth="-1.0" text="ID" />
                                <TableColumn fx:id="columnName" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="-1.0" text="Nombre" />
                                <TableColumn fx:id="columnSurnames" editable="false" maxWidth="500.0" minWidth="120.0" prefWidth="-1.0" text="Apellidos" />
                                <TableColumn fx:id="columnEmail" editable="false" maxWidth="500.0" minWidth="120.0" prefWidth="-1.0" text="Telefono" />
                                <TableColumn fx:id="columnPhone" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="-1.0" text="Email" />
                        <TableColumn fx:id="columnAddress" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="-1.0" text="Direccion" />
                        <TableColumn fx:id="columnPosition" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="-1.0" text="Posicion" />
                        <TableColumn fx:id="columnSpeciality" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="-1.0" text="Especialidad" />
                        <TableColumn fx:id="columnRFC" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="-1.0" text="RFC" />
                        <TableColumn fx:id="columnNSS" editable="false" maxWidth="500.0" minWidth="100.0" prefWidth="-1.0" text="NSS" />
                            </columns>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </items>
                </SplitPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
