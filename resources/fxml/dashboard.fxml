<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="700.0" minWidth="740.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.asm.view.controller.DashboardController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" prefHeight="200.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Dashboard">
               <font>
                  <Font size="36.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="100.0" spacing="20.0">
               <children>
                  <VBox alignment="CENTER_LEFT" onMouseClicked="#activeClientsBoxOnClick" prefHeight="200.0" style="-fx-background-color: rgba(126, 211, 33, .5); -fx-border-radius: 5%;">
                     <children>
                        <Label text="Clientes Registrados">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="activeClientsLabel" text="33">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" onMouseClicked="#activeEmployeesBoxOnClick" prefHeight="200.0" style="-fx-background-color: rgba(116, 142, 255, .6); -fx-border-radius: 5%;">
                     <children>
                        <Label text="Empleados Activos">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="activeEmployeesLabel" text="8">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" onMouseClicked="#currentOrdersOnClick" prefHeight="200.0" style="-fx-background-color: rgba(90, 87, 106, .5); -fx-border-radius: 5%;">
                     <children>
                        <Label text="Servicios en Progreso">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="currentOrdersLabel" text="5">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" onMouseClicked="#incomeBoxOnClick" prefHeight="200.0" style="-fx-background-color: rgba(237, 86, 60, .6); -fx-border-radius: 5%;">
                     <children>
                        <Label text="Total Ingresos">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="totalIncomeLabel" text="\$1500">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>
